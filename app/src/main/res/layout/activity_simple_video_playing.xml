<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:onClick="onClickEmptyArea"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/view_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.whty.eschoolbag.filemanager.widgetview.SimpleMediaController
        android:id="@+id/media_controller_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:paddingLeft="@dimen/px_50"
        android:paddingRight="@dimen/px_60">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/px_56"
            android:layout_height="@dimen/px_52"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back" />

    </RelativeLayout>


</RelativeLayout>