<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog">


    <LinearLayout
        android:layout_width="@dimen/px_620"
        android:layout_height="@dimen/px_416"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_110">

            <TextView
                android:textSize="@dimen/px_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提示"
                android:textColor="#ff49a0fb" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_eeeee" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textSize="@dimen/px_36"
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_55"
                android:text="确认删除全部历史记录？"
                android:textColor="#ff555555" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px_40"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <Button
                    android:layout_margin="@dimen/px_10"
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/px_210"
                    android:layout_height="@dimen/px_70"
                    android:background="@drawable/shape_cancel_button"
                    android:text="取消"
                    android:textColor="#ff555555" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_margin="@dimen/px_10"
                    android:id="@+id/btn_confirm"
                    android:layout_width="@dimen/px_210"
                    android:layout_height="@dimen/px_70"
                    android:background="@drawable/shape_confirm_button"
                    android:text="确定"
                    android:textColor="#ffffffff" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</FrameLayout>