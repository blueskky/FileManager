<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog">

    <LinearLayout
        android:layout_width="@dimen/px_620"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_102">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="排序"
                android:textColor="#ff49a0fb"
                android:textSize="17sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_c2c2c2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:paddingLeft="@dimen/px_55"
            android:paddingRight="@dimen/px_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="类型"
                android:textColor="#ff555555"
                android:textSize="14sp" />


            <CheckBox
                android:id="@+id/cb_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/sort_check_bg"
                android:checked="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e8e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:paddingLeft="@dimen/px_55"
            android:paddingRight="@dimen/px_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="名称"
                android:textColor="#ff555555"
                android:textSize="14sp" />


            <CheckBox
                android:id="@+id/cb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/sort_check_bg" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e8e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:paddingLeft="@dimen/px_55"
            android:paddingRight="@dimen/px_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="大小"
                android:textColor="#ff555555"
                android:textSize="14sp" />


            <CheckBox
                android:id="@+id/cb_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/sort_check_bg" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e8e8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:paddingLeft="@dimen/px_55"
            android:paddingRight="@dimen/px_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="时间"
                android:textColor="#ff555555"
                android:textSize="14sp" />


            <CheckBox
                android:id="@+id/cb_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/sort_check_bg" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_c2c2c2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_132"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_des"
                android:layout_width="@dimen/px_210"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/shape_cancel_button"
                android:text="降序"
                android:textColor="#ff555555"
                android:textSize="15sp" />

            <Space
                android:layout_width="@dimen/px_90"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_asc"
                android:layout_width="@dimen/px_210"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/shape_confirm_button"
                android:text="升序"
                android:textColor="#ffffffff"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>